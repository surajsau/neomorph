<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="colorShadowLight" format="color"/>
    <attr name="colorShadowDark" format="color"/>
    <attr name="nm_cornerSize" format="dimension"/>

    <attr name="nm_fillColor" format="color" />
    <attr name="nm_elevation" format="dimension" />
    <attr name="nm_type" format="enum">
        <enum name="outerShadow" value="1" />
        <enum name="innerShadow" value="0" />
        <enum name="combined" value="2" />
    </attr>

    <declare-styleable name="Neumorph">
        <attr name="nm_fillColor" />
        <attr name="nm_elevation" />
        <attr name="colorShadowDark" />
        <attr name="colorShadowLight" />
        <attr name="nm_cornerSize" />
        <attr name="nm_type" />
    </declare-styleable>
</resources>